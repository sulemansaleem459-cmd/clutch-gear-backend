# ===========================================
# CLUTCH GEAR BACKEND - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and fill in values

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1
API_BASE_URL=http://localhost:5000/api/v1

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/clutchgear?retryWrites=true&w=majority
MONGODB_DB_NAME=clutchgear

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=3

# SMS Provider Configuration (Twilio/MSG91/etc.)
SMS_PROVIDER=console
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=CLUTCH

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-id

# CORS Configuration
# Use * for all origins or comma-separated list: http://localhost:3000,https://app.clutchgear.com
CORS_ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination Defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# ===========================================
# FIREBASE CLOUD MESSAGING (Push Notifications)
# ===========================================
# Option 1: Path to Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json

# Option 2: Firebase service account JSON as a string (for cloud deployments)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project",...}

# ===========================================
# GARAGE/BUSINESS INFO (for PDF Invoices)
# ===========================================
GARAGE_NAME=ClutchGear Auto Service
GARAGE_ADDRESS=123 Auto Street, Garage City, State 123456
GARAGE_PHONE=+91 9876543210
GARAGE_EMAIL=contact@clutchgear.com
GARAGE_GST=GSTIN1234567890
INVOICE_TERMS=Payment is due within 7 days. Thank you for choosing ClutchGear!

# ===========================================
# UPLOAD CONFIGURATION
# ===========================================
# Maximum image size in bytes (default: 10MB = 10485760)
MAX_IMAGE_SIZE=10485760
# Maximum video size in bytes (default: 100MB = 104857600)
MAX_VIDEO_SIZE=104857600

# ===========================================
# RAZORPAY (Test Payments)
# ===========================================
# Create keys in Razorpay Dashboard (Test mode) and add them here.
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_test_key_secret
